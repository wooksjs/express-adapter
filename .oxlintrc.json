{
    "$schema": "./node_modules/oxlint/configuration_schema.json",
    "categories": {
        "correctness": "warn",
        "suspicious": "warn"
    },
    "plugins": ["typescript"],
    "rules": {
        "no-unused-vars": "warn"
    },
    "overrides": [
        {
            "files": ["*.spec.ts", "*.test.ts"],
            "rules": {
                "no-unused-vars": "off"
            }
        }
    ]
}
